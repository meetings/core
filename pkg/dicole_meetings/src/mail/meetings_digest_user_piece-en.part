[% IF in_html %]
<table border="0" cellspacing="0" cellpadding="5" style="margin-left:20px;"><tr>
<td height="30" style="vertical-align:middle; padding:0px; font-size: 15px; font-family: Arial, Helvetica, sans-serif; color: #4a4a4a; margin:0; text-align:left;">
    <img style="width:30px; height:30px; margin-right:15px; border:none;outline:none; text-decoration:none; -ms-interpolation-mode: bicubic;" src="[% user_image | html %]" alt="[% user_name | html %]" />
    [% MTN.t('%1$s added %2$s %3$s ago.',[user_name,note_name,time]) %]
</td></tr></table>
[% ELSE %]
[% MTN.t('%1$s added %2$s %3$s ago.',[user_name,note_name,time]) %]---N---
[% END %]
